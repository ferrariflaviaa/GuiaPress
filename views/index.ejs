<%- include('partials/header') %>
  <%- include('partials/homeNavBar') %>

    <body>
      <div class="container">
        <hr>
        <div class="jumbotron">
          <h1 class="display-4">Bem-vindo</h1>
          <p class="lead">Nosso blog dedicado à tecnologia, onde você encontrará informações e insights valiosos sobre o
            mundo em constante evolução da inovação tecnológica.</p>
        </div>
        <hr>

        <div class="row">
          <% articles.forEach((article, index)=> { %>
            <div class="col-md-4">
              <div class="card text-white bg-secondary mb-3 h-100">
                <div class="card-header">
                  <%=article.category.title%>
                </div>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title">
                    <%= article.title %>
                  </h5>
                  <p class="card-text">
                    <%- article.body.substring(0, 60) %> <!-- Pega os primeiros 60 caracteres -->
                      <% if (article.body.length> 60) { %>
                        ... <!-- Adicione "..." se o texto for mais longo do que 60 caracteres -->
                        <% } %>
                  </p>
                  <a href="/<%= article.slug%>" class="btn btn-dark mt-auto">Ler artigo</a>
                </div>
              </div>
            </div>

            <% if ((index + 1) % 3===0) { %> <!-- Fecha a linha a cada 3 cards -->
        </div>
        </br>
        <div class="row">
          <% } %>

            <% }) %>
        </div>

        <div class="row">
          <div class="col col-12">
            <a style="float: right;" href="/articles/page/2">Next >></a>
          </div>
          <hr>
        </div>
        <hr>
      </div>
    </body>

    <%- include('partials/footer') %>