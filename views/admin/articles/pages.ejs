  <%- include('../../partials/homeNavBar') %>

    <body>
      <div class="container">
        <hr>
        <div class="row">

        <% result.articles.rows.forEach((article, index) => { %>
          <div class="col-md-4">
            <div class="card text-white bg-secondary mb-3 h-100">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">
                  <%= article.title %>
                </h5>
                <p class="card-text">
                  <%- article.body.substring(0, 60) %> <!-- Pega os primeiros 60 caracteres -->
                    <% if (article.body.length> 60) { %>
                      ... <!-- Adicione "..." se o texto for mais longo do que 60 caracteres -->
                      <% } %>
                </p>
                <a href="/<%= article.slug%>" class="btn btn-dark mt-auto">Ler artigo</a>
              </div>
            </div>
          </div>

          <% if ((index + 1) % 3===0) { %> <!-- Fecha a linha a cada 3 cards -->
      </div>
      </br>
      <div class="row">
        <% } %>
          <% }) %>
        </div> <br>

            <div class="row">
              <div class="col col-12">
                <% if(result.next) { %>
                  <a href="/articles/page/<%= parseInt(result.page) + 1%>" style="float: right;">
                    <button class="btn btn-danger">Próximo</button>
                  </a>
                  <% } %>

                    <% if (result.page> 1) { %>
                      <a href="/articles/page/<%= parseInt(result.page) - 1%>" style="float: left;">
                        <button class="btn btn-danger">Anterior</button>
                      </a>
                      <% } %>

                        <% if (result.page <=1) { %>
                          <a href="/" style="float: left;">
                            <button class="btn btn-danger">Página inicial</button>
                          </a>
                          <% } %>
              </div>
            </div>
            <hr>
      </div>
    </body>

    <%- include('../../partials/footer') %>